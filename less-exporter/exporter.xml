<exporter version="1.0">
    <!-- identifier of the exporter -->
    <name>solid-less</name>
	
    <!-- display name of the exporter for the combo box -->
    <displayName>Solid Less Export</displayName>
	
    <!-- description of the exporter -->
    <description>Export for Less as mixins. Will add mixins with available variables like width / height for sprites and textures. Simply add the -vars() mixin in your declaration to have those variables in your current scope. Will also add a -ratio() mixin for each texture with automatic background-size calculation. The generated CSS will not be heavier than the original LESS exporter.</description>

    <!-- exporter version -->
    <version>1.0</version>
	
    <files>
        <file>
            <!-- name of this file variable -->
            <name>less</name>

            <!-- human readable name (for GUI) -->
            <displayName>Less file</displayName>

            <!-- file extension for the file -->
            <fileExtension>less</fileExtension>

            <!-- description what the file contains, used in tooltips in the GUI -->
            <description>Less mixins file output</description>

            <!-- name of the template file -->
            <template>solid.less</template>
        </file>
    </files>

    <!-- target framework supports trimming -->
    <supportsTrimming>true</supportsTrimming>

    <!-- target framework supports rotated sprites -->
    <supportsRotation>false</supportsRotation>

    <!-- rotated sprites direction (cw/ccw) -->
    <rotationDirection>cw</rotationDirection>

    <!-- supports npot sizes -->
    <supportsNPOT>true</supportsNPOT>

    <!-- supports file name stripping (remove .png etc) -->
    <supportsTrimSpriteNames>yes</supportsTrimSpriteNames>

    <!-- supports texure subpath -->
    <supportsTextureSubPath>yes</supportsTextureSubPath>
</exporter>


